@require "reset.styl"
@require "rupture"
rupture.scale = 0 640px 1024px 1300px
rupture.scale-names = 'mobile' 'tablet' 'desktop' 'desktop+'

// general mixins
content-container(padding = 15px)
  max-width 1200px
  margin 0 auto
  padding 0 padding

grid(ratio, gutter = 20px)
  width 'calc((99.99% + %s) * %s - %s)' % (gutter ratio gutter)
leftColumn(ratio, gutter = 20px)
  width 'calc((99.99% + %s) * %s - %s)' % (gutter ratio gutter)
rightColumn(ratio, gutter = 20px)
  width 'calc((99.99% + %s) * %s)' % (gutter ratio)

// base variables
red = #db0a40
smallPadding = 12px
normalPading = 20px

// base styles
body
  font-family Boston,'Helvetica Neue',Helvetica,Arial,sans-serif
  overflow-y scroll
  -webkit-overflow-scrolling touch

p
  font-weight 300

a
  &
  &:visited
  &:hover
  &:focus
  &:active
    color sharkGrey
    font-weight 700
    text-decoration none
  &:hover
    text-decoration underline

// layout
body
  display block
  +above('desktop')
    display flex

.header
  padding normalPading smallPadding
  display flex
  justify-content center
  align-items center
  flex-direction column
  background-color red
  color white
  +above('desktop')
    padding 0
    leftColumn(1/2)
    position fixed
    top 0
    left 0
    bottom 0
  +above('desktop+')
    leftColumn(2/5)

.profile
  background-color white
  width 100px
  height 100px
  border-radius 50px
  +above('tablet')
    width 150px
    height 150px
    border-radius 75px
  +above('desktop')
    width 200px
    height 200px
    border-radius 100px

.teaser
  padding-top 16px
  +above('tablet')
    padding-top 24px
  +above('desktop')
    padding-top 40px

.credits
  font-size 13.5px
  padding-top 12px
  +above('tablet')
    padding-top 20px

.content
  padding normalPading smallPadding
  display flex
  flex-wrap wrap
  flex-direction row
  justify-content center
  +above('desktop')
    padding normalPading 0
    rightColumn(1/2)
    position absolute
    top 0
    right 0
    bottom 0
  +above('desktop+')
    rightColumn(3/5)

// card stuff
.card
  position relative
  background-color white
  border 3px solid red
  cursor pointer

  // card sizing
  width 100%
  min-height 200px
  +above('tablet')
    width 45%

  // card padding
  margin 0 0 smallPadding 0
  &:last-child
    margin 0
  +above('tablet')
    margin 0 0 normalPading 0
    &:nth-child(2n+1)
      margin 0 0 normalPading normalPading
  +at('desktop')
    margin 0 0 smallPadding 0
    &:nth-child(2n+1)
      margin 0 0 smallPadding smallPadding

  &__overlay
    position absolute
    top 0
    left 0
    bottom 0
    right 0
    display flex
    justify-content center
    align-items center
    background-color white

    &-title
      color red
      text-transform uppercase
      font-size 28px
      font-weight 800

  &:hover
    & .card__overlay
      display none


  &__giphy
    pointer-events none
    overflow hidden

  &--cta
    min-height 100px
    width 90%
    display flex
    justify-content center
    align-items center
    font-size 24px
    font-weight bold
    color red
    cursor default
